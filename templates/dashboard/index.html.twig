{% extends 'base.html.twig' %}

{% block title %}Dashboard | Pulsar Panel{% endblock %}

{% block body %}
    {% if app.user %}
        <div class="container-fluid w-50 border mb-5 mt-3 text-center">
            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
        <div class="container-fluid w-75 mb-5 pt-2 pb-2 bg-secondary text-center text-uppercase fw-bolder">
            <span class="text-center text-dark">Domains</span>
        </div>
        <div class="container-fluid w-50 text-center text-white">
            <table class="table text-center">
                <thead class="table-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Domain</th>
                    <th scope="col">Last</th>
                    <th scope="col">Handle</th>
                </tr>
                </thead>
                <tbody>
                {% for domain in domain_list %}
                    <tr class="text-center text-white">
                        <th scope="row">{{ loop.index }}</th>
                        <td>{{ domain }}</td>
                        <td>Otto</td>
                        <td>@mdo</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="container-fluid w-50 border mb-5 mt-3 text-center">
            <a href="{{ path('app_logout') }}">Logout</a>
        </div>


